                <label><input type="radio" name="operacion" value="multiplicar"> Multiplicación</label><br>
                <label><input type="radio" name="operacion" value="dividir"> División</label><br>
                <br />

                <input type="submit" name="name" value="Calcular" />
            </form>
        </div>
        <div class="col-lg-6">
            <h2>El resultado es: @ViewBag.Res</h2>
            El resultado es: @Html.DisplayFor(model=>model.Res)
        </div>
    </div>
</div>

