@model IDGS903_Tema1.Models.OperasBas

@{
    ViewBag.Title = "Ventana3";
}

<h2>Ventana3</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form action="/" method="post">
                <label>Numero 1</label>
                <input type="text" name="Num1" value="" required/>
                <br /><br />
                <label>Numero 2</label>
                <input type="text" name="Num2" value="" required/>
                <br />
                <label><input type="radio" name="operacion" value="sumar" checked> Suma</label><br>
